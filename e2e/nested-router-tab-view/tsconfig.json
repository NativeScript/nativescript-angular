{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitHelpers": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "lib": [
          "es2017",
          "dom",
          "es6"
      ],
      "baseUrl": ".",
      "paths": {
          "~/*": [
              "app/*"
          ]
      }
  },
  "includes": [
    "./references.d.ts"
  ],
  "files": [
    "./app/main.ts"
  ],
  "exclude": [
      "node_modules",
      "platforms",
      "**/*.aot",
      "e2e"
  ]
}